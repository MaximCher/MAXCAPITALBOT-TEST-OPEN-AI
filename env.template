# MAXCAPITAL Bot Configuration Template
# Copy this file to .env and fill in your values

# ====================================
# TELEGRAM BOT CONFIGURATION
# ====================================
# Get bot token from @BotFather in Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram ID or group ID for manager notifications
# Get your ID from @userinfobot
# For multiple chat IDs, use comma-separated list: 123456789,987654321,-1001234567890
MANAGER_CHAT_ID=123456789
MANAGER_CHAT_IDS=123456789,987654321,-1001234567890

# ====================================
# DATABASE CONFIGURATION
# ====================================
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=maxcapital_bot
POSTGRES_USER=maxcapital
# ⚠️ CHANGE THIS PASSWORD!
POSTGRES_PASSWORD=ChangeThisToSecurePassword123!

# ====================================
# OPENAI API CONFIGURATION
# ====================================
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Models to use
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small

# ====================================
# BITRIX24 CRM INTEGRATION
# ====================================
# Webhook URL for creating leads
# Format: https://your-domain.bitrix24.com/rest/1/webhook_key/crm.lead.add
BITRIX24_WEBHOOK_URL=https://your-domain.bitrix24.com/rest/1/abc123def456/crm.lead.add

# ====================================
# GOOGLE DRIVE INTEGRATION (OPTIONAL)
# ====================================
# Leave empty if not using Google Drive
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_CREDENTIALS_FILE=credentials.json

# ====================================
# APPLICATION SETTINGS
# ====================================
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# DEBUG_MODE: true or false
DEBUG_MODE=false

# ====================================
# WEB SERVER CONFIGURATION (Admin Panel)
# ====================================
# Host to bind web server (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
WEB_HOST=0.0.0.0
# Port for web server
WEB_PORT=8000

# Password for accessing chat history admin panel
# ⚠️ CHANGE THIS PASSWORD!
CHAT_HISTORY_PASSWORD=YourSecurePassword123!



# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration (for AI consultation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # or gpt-3.5-turbo, gpt-4, etc.

# Bitrix24 Configuration
BITRIX_WEBHOOK=https://your-domain.bitrix24.ru/rest/1/your_token_here
BITRIX_OUT_HOOK=https://your-domain.bitrix24.ru/rest/1/your_out_token_here
B24_DEFAULT_DIALOG=chat1

# Google Drive Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-credentials.json
DRIVE_ROOT_FOLDER_ID=your_google_drive_folder_id_here

# Knowledge Base Folders (Google Drive)
DRIVE_MATERIALS_FOLDER_ID=your_materials_folder_id_here  # Documents for sending to clients
DRIVE_INFO_FOLDER_ID=your_info_folder_id_here  # Information for client communication

# Bitrix24 Manager Assignment
B24_DEFAULT_MANAGER_EMAIL=theroonekz@gmail.com  # Default manager email for all leads (will be found automatically)
B24_DEFAULT_MANAGER_ID=123  # Alternative: Default manager ID for all leads (if email not found)
# Optional: Assign different managers by intent
# B24_MANAGER_INVEST=123  # Manager for investment requests
# B24_MANAGER_DOCUMENTS=456  # Manager for document requests
# B24_MANAGER_CONSULT=789  # Manager for consultation requests
# B24_MANAGER_SUPPORT=101  # Manager for support requests

# Server Configuration (optional)
PUBLIC_URL=https://your-public-url.com
PUBLIC_HOSTNAME=your-hostname.com
PUBLIC_SCHEME=https

# PostgreSQL Database Configuration (optional, for statistics)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=maxcapital_bot
